#include<iostream>
using namespace std;

int main() {
	// Write your code here
	int number,choice;

	cin>>number;
	cin>>choice;

	if (choice == 1)
	{
		int sum = 0;
		for(int i = 1 ; i <= number ; i ++)
		{
			sum = sum + i;
		}
		cout<<sum;
	}
	else if (choice == 2 )
	{
		int sum = 1;
		for(int i = 1 ; i <= number ; i ++)
		{
			sum = sum * i;
		}
		cout<<sum;
	}
	else{
		cout<<-1;
	}
}
