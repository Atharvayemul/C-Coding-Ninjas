int countWords(string str) {
  // Write your code here
  int j = 0;

  for (int i = 0; str[i] != '\0' ; i++)
    {
        if (str[i] == ' ')
            j++;    
    }

  j = j + 1;

  return j;
}

#include <iostream>
#include <string>
using namespace std;

#include "solution.h"

int main() {
    string str;
    getline(cin, str);
    cout << countWords(str);
}
